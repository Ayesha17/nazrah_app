<resources>

    <attr name="titleText" format="string" />
    <attr name="title" format="string" />
    <attr name="titleType" format="string" />
    <attr name="textColorRes" format="reference" />
    <attr name="buttonTheme" format="string" />
    <attr name="descText" format="string" />
    <attr name="drawableStart" format="reference" />
    <attr name="drawableEnd" format="reference" />
    <attr name="descType" format="string" />
    <attr name="textStyle" format="reference" />
    <attr name="descStyle" format="reference" />
    <attr name="isSingleLine" format="boolean" />
    <attr name="drawable" format="reference" />
    <attr name="error" format="string" />
    <attr name="click" format="boolean" />

    <declare-styleable name="RoundedImageView">
        <attr name="corner_radius" format="dimension" />
        <attr name="border_width_rn" format="dimension" />
        <attr name="border_color_rn" format="color" />
        <attr name="mutate_background" format="boolean" />
        <attr name="oval" format="boolean" />
        <attr name="android:scaleType" />
    </declare-styleable>

    <declare-styleable name="CustomTextView">
        <attr name="titleText" />
        <attr name="textColorRes" />
        <attr name="textStyle" />
        <attr name="isSingleLine" />
    </declare-styleable>

    <declare-styleable name="CustomButton">
        <attr name="drawableStart" />
        <attr name="drawableEnd" />
        <attr name="title" />
        <attr name="descText" />
        <attr name="textStyle" />
        <attr name="buttonTheme" />
        <attr name="descStyle" />
    </declare-styleable>

    <declare-styleable name="CustomToolbar">
        <attr name="drawableStart" />
        <attr name="titleText" />
        <attr name="drawableEnd" />
        <attr name="titleType" />
        <attr name="textColorRes" />
        <attr name="textStyle" />
        <attr name="customToolbarBackground" format="integer" />
        <attr name="customToolbarButtonBackground" format="integer" />

    </declare-styleable>

    <declare-styleable name="CustomProgressBar">
        <attr name="progressPercentage" format="integer" />
        <attr name="currentStep" format="string" />
        <attr name="totalStep" format="string" />
        <attr name="titleText" />
        <attr name="textStyle" />
        <attr name="textColorRes" />
    </declare-styleable>

    <declare-styleable name="CustomDefaultEditText">
        <attr name="drawableStart" />
        <attr name="drawableEnd" />
        <attr name="drawable" />
        <attr name="android:hint" />
        <attr name="hintTextColor" />
        <attr name="android:textColor" />
        <attr name="android:textSize" />
        <attr name="android:text" />
        <attr name="android:maxLength" />
        <attr name="android:inputType" />
        <attr name="click" />
        <attr name="error" />
        <attr name="endIconMode" />
        <attr name="android:imeOptions" />
        <attr name="android:digits" />
    </declare-styleable>
</resources>
